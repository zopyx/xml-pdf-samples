<?xml version="1.0" encoding="utf-8"?>
<Layout xmlns:sd="urn:speedata:2009/publisher/functions/en"
  xmlns="urn:speedata.de:2009/publisher/en" >
  <Options show-grid="yes" />

  <Pageformat width="20cm" height="30cm"/>
  <SetGrid width="1cm" height="1cm"/>

  <Pagetype name="page" test="true()">
    <Margin left="1cm" right="1cm" top="1cm" bottom="1cm"/>
    <PositioningArea name="text">
      <PositioningFrame width="15" height="28" row="1" column="1"/>
    </PositioningArea>
  </Pagetype>

    <Record element="XMLBIBLE">
        <ProcessNode select="BIBLEBOOK" />
    </Record>

    <Record element="BIBLEBOOK">
    <PlaceObject>
    <Textblock>
    <Paragraph><Value select="@bname"/></Paragraph>
    </Textblock>
    </PlaceObject>
        <ProcessNode select="CHAPTER" />
    </Record>

    <Record element="CHAPTER">
    <PlaceObject>
    <Textblock>
    <Paragraph><Value select="@cnumber"/></Paragraph>
    </Textblock>
    </PlaceObject>
        <ProcessNode select="VERS" />
    </Record>

    <Record element="VERS">
    <PlaceObject>
    <Textblock>
    <Paragraph><Value select="@vnumber"/>. <Value select="string(.)"/></Paragraph>
    </Textblock>
    </PlaceObject>
    </Record>

</Layout>
